{
    "manifest_version": 2,

    "name": "Copyright Violation Reporter",
    "short_name": "それ、パクられてますよ！",
    "description": "著作権違反のコンテンツを見つけたらTwitterでその著作権者に通知するExtensionです。",
    "version": "1.0",
    "homepage_url": "http://chromeextension.junoe.jp/CopyrightViolationReporter/",
    "update_url":   "https://raw.githubusercontent.com/tohokuaiki/ChromeExtension/master/CopyrightViolationReporter/xml/updateInfo.xml",

    
    "web_accessible_resources": [
        "oauth_callback.html"
        ],

    "browser_action": {
        "default_icon": "images/icon_16.png",
        "default_popup": "popup.html"
      },
    "icons": {
        "16": "images/icon_16.png",
        "48": "images/icon_48.png",
        "128": "images/icon_128.png"
      },
      
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "windows": "Alt+Shift+Z",
                "mac": "Alt+Shift+Z",
                "chromeos": "Alt+Shift+Z",
                "linux": "Alt+Shift+Z"
              }
        }
    },
    
    "content_scripts": [
        ],
    
    "content_security_policy": "script-src 'self' ; object-src 'self'",
    "permissions": [
        "storage",
        "tabs",
        "https://api.twitter.com/oauth/*",
        "https://api.twitter.com/1.1/*",
        "http://chromeextension.junoe.jp/CopyrightReporter/*",
        "https://raw.githubusercontent.com/tohokuaiki/ChromeExtension/master/CopyrightViolationReporter/xml/*"
        ]
}
